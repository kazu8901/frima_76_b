%header.login-header
  .header-logo
    %img{:src => "/images/logo.png"}
%body
  .login-content
    .login-content__sign-in
      %p
        アカウントをお持ちでない方はこちら
      %a(href="/users/sign_up") 新規会員登録
    .login-content__sns-login
      %a.google(href="") 
        %i.fab.fa-google.fa-lg
        %span.text
          Googleでログイン 
      %br/
      %a.facebook(href="") 
        %i.fab.fa-facebook-square.fa-lg
        %span.text
          Facebookでログイン
      %br/
      %a.apple(href="") 
        %i.fab.fa-apple.fa-lg
        %span.text 
          Apppleでログイン
    .login-content__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %label{:for => "email"}
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "   メールアドレス", class: "input-text"
        .field
          %label{:for => "password"}
          %br/
          = f.password_field :password, autocomplete: "current-password", :placeholder => "   パスワード", class: "input-text"

        .actions
          = f.submit "ログイン", class: "login-btn"
      .form-link
        = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "link"
%footer
  .single-footer
    .single-footer__content
      .links
        %a.policy(href="") プライバシーポリシー
        %a.terms(href="") 利用規約
        %a.transacition(href="") 特定商取引に関する表記
      .logo
        %img{:src => "/images/logo-white.png"}
        .logo__inc
          %p
            © Frima, Inc.